<section>
  <h2>Pay your bill</h2>



  <form action="/charge" method="post" id="payment-form">

    <div class="form-row">
      <p>Your outstanding balance is: <span id="balance">$387</span></p>
      <label for="amount">Payment Amount:</label>
      <input type="number" min="0" max="387" name="amount" id="amount" placeholder="Enter how much you will pay today:" />
      <br>
      <label for="card-element">
        Credit or debit card
      </label>

      <div id="card-element">
      </div>

      <div id="card-errors" role="alert">
      </div>
    </div>

    <button>Submit Payment</button>

  </form>
</section>

